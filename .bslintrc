{
  "ignore": ["tests", "src/utils/debug", "test/", "resources/", "source/global/utils/debug", "components/analytics/"],
  "skip_line": {
    "active": true,
    "params": {}
  },
  "spell_check": {
    "active": false,
    "params": {
      "dictionary": "en_GB"
    }
  },
  "max_line_length": {
    "active": true,
    "params": {
      "max_line_length": 180
    }
  },
  "check_indentation": {
    "active": true,
    "params": {
      "tab_size": 2,
      "only_tab_indents": false
    }
  },
  "check_comment": {
    "active": false,
    "params": {
      "TODOs": {
        "allow_TODOs": true,
        "format": "('|rem)\\s*TODO\\s*([A-Za-z1-9]{2,3})|('|rem)\\s*@copyright\\sLounge([A-Za-z]{2,3})|('|rem)\\s*ABSTRACT\\s*([A-Za-z]{2,3})|('|rem)\\s*///"
      },
      "allow_generic_comments": false
    }
  },
  "check_trace_free": {
    "ignore": ["source/global/utils/Debug.brs"],
    "active": false,
    "params": {}
  },
  "spaces_around_operators": {
    "active": false,
    "params": {
      "spaces_around_operators": 1
    }
  },
  "check_file_encoding": {
    "active": true,
    "params": {
      "source_file_encoding": "ASCII"
    }
  },
  "trailing_white_space": {
    "active": true,
    "params": {}
  },
  "check_variable_lowercase_start": {
    "active": true,
    "params": {}
  },
  "consecutive_empty_lines": {
    "active": true,
    "params": {
      "consecutive_empty_lines": 1
    }
  },
  "check_commas_in_object": {
    "active": false
  },
  "check_trailing_comma_in_object": {
    "active": false
  }
}
